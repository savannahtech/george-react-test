{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tasks-management/icons": ["libs/icons/src/index.ts"],
      "@tasks-management/shared-types": ["libs/shared-types/src/index.ts"],
      "@tasks-management/shared-ui": ["libs/shared-ui/src/index.ts"],
      "@tasks-management/shared-ui/server": ["libs/shared-ui/src/server.ts"],
      "@tasks-management/utils": ["libs/utils/src/index.ts"],
      "@tasks-manager": ["apps/task-manager"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
